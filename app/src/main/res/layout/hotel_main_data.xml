<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="16dp">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/grade_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_round_grade"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|top"
            android:paddingVertical="8dp"
            android:paddingLeft="10dp"
            android:src="@drawable/ic_star" />

        <TextView
            android:id="@+id/grade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|top"
            android:lineSpacingExtra="0sp"
            android:padding="5dp"
            android:text="5"
            android:textAppearance="@style/title"
            android:textColor="#FFA800"
            android:translationY="-0.05sp" />

        <TextView
            android:id="@+id/star_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|top"
            android:lineSpacingExtra="0sp"
            android:paddingRight="10dp"
            android:text="Превосходно"
            android:textAppearance="@style/title"
            android:textColor="#FFA800"
            android:translationY="-0.05sp" />

    </androidx.appcompat.widget.LinearLayoutCompat>

    <TextView
        android:id="@+id/hotel_title"
        android:layout_width="343dp"
        android:layout_height="26dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:text="Steigenberger Makadi"
        android:textAppearance="@style/title"
        android:textSize="22sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/grade_container"
        tools:text="Steigenberger Makadi" />

    <Button
        android:id="@+id/address_button"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="textStart"
        android:background="@color/white"
        android:padding="0dp"
        android:text="Madinat Makadi, Safaga Road, Makadi Bay, Египет"
        android:textAppearance="@style/title"
        android:textColor="@color/blue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hotel_title" />

</androidx.constraintlayout.widget.ConstraintLayout>